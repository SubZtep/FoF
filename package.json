{
  "name": "js13k-2020",
  "version": "0.1.0",
  "description": "Js13kGames 2020 competition entry",
  "author": "Andras Serfozo <subztep@gmail.com>",
  "scripts": {
    "build": "rollup --environment BUILD:production -c & pug -o dist src",
    "watch-ts": "rollup -c -w",
    "watch-pug": "pug -o dist -P -w src",
    "dev": "concurrently \"npm:watch-ts\" \"npm:watch-pug\" \"http-server dist -c-1\"",
    "dev-ssl": "concurrently \"npm:watch-ts\" \"npm:watch-pug\" \"http-server dist -c-1 -S -C cert.pem\"",
    "pemgen": "openssl req -newkey rsa:2048 -new -nodes -x509 -days 3650 -keyout key.pem -out cert.pem",
    "wipe": "npx rimraf dist node_modules package-lock.json",
    "preinstall": "mkdir dist 2>&1 &",
    "postinstall": "cp node_modules/aframe/dist/aframe.js* dist"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-json": "^4.1.0",
    "@types/aframe": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "aframe": "^1.0.4",
    "concurrently": "^5.3.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "http-server": "^0.12.3",
    "prettier": "^2.1.1",
    "pug-cli": "^1.0.0-alpha6",
    "rollup": "^2.26.8",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.1",
    "super-three": "^0.119.0",
    "typescript": "^4.0.2"
  }
}
