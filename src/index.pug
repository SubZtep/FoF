- var debugComponents = {}
unless isProduction
  - debugComponents.stats = true
  //- - debugComponents["stats-in-vr"] = ""

doctype html
html(lang="en")
  head
    title #FoF [#{isProduction ? "production" : "development"}]
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0")
    link(rel="icon" href="data:,")
    if isProduction
      script(src="https://aframe.io/releases/1.0.4/aframe.min.js")
    else
      script(src="aframe.js")
    script(src="index.js")
    style(type="text/css").
      html, body { width: 100vw; height: 100vh; padding: 0; margin: 0; }
      /*.a-enter-vr-button { min-width: 116px; min-height: 68px; }*/
  body
    a-scene(
      renderer="alpha: false; colorManagement: true; antialias: false; logarithmicDepthBuffer: false; physicallyCorrectLights: true: precision: low"
      audio-listener
      shadow="type: pcfsoft"
      fog="type: 'exponential'; color: #666; near: 2; far: 10"
      background="color: #666"
      )&attributes(debugComponents)

      include entities/mixins.pug

      include entities/environment.pug


      a-box#box(position="0 0 -5")

//-
      include entities/lights.pug
//-
      a-assets
        a-asset-item#NeoCities(src="assets/KB3D_NeoCities-Native.gltf")
