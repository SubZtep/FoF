a-entity.stars(
  material="fog: false"
  stars="color: #859393; count: 50")

a-entity.ground(
  geometry="primitive: ground"
  shadow="cast: false"
  rotation="-90 0 0"
  material="flatShading: true; color: #003334"
  )
  //- mat

//- Water
a-entity.water
  a-entity.w(visible="false" water="size: 100 80" position="0 0 -90")
  a-entity.w(visible="false" water="size: 100 80" position="0 0 90")
  a-entity.w(visible="false" water="size: 80 100" position="-90 0 0")
  a-entity.w(visible="false" water="size: 80 100" position="90 0 0")

//- Pillars
a-entity.pillars
  a-box(material="shader: flat; color: #000" width="0.2" height="100" depth="0.2" position="50 0 0")
  a-box(material="shader: flat; color: #000" width="0.2" height="100" depth="0.2" position="-50 0 0")
  a-box(material="shader: flat; color: #000" width="0.2" height="100" depth="0.2" position="0 0 50")
  a-box(material="shader: flat; color: #000" width="0.2" height="100" depth="0.2" position="0 0 -50")
