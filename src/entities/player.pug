- var eyePosition = "0 1.6 0"

a-entity#player(
  wasd-controls="acceleration: 150"
  wasd-ext
  raycaster="far: 2.5; objects: [data-obstacle]"
  obstacle-stop)

  a-entity(
    camera
    look-controls
    position=eyePosition
    animation__pu="property: position; to: 0 5 5; startEvents: u; dur: 300"
    animation__pd="property: position; to: 0 1.6 0; startEvents: d; dur: 300")

    //- a-entity(
    //-   raycaster="far: 50"
