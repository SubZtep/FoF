- var eyePosition = "0 1.6 0"

a-entity#player(
  mixin="playerintro"
  wasd-ext
  )

  a-entity(
    raycaster="far: 2; objects: [data-obstacle]"
    )

  a-entity.camera(
    look-controls
    camera="far: 200"
    position=eyePosition
    animation="property: position; to: 0 15 9; startEvents: u; dur: 300"
    animation__p="property: position; to: 0 1.6 0; startEvents: d; dur: 300"
    )

    //- visible="true"
    a-entity.novr.intro(
      animation="property: visible; from: true; to: false; startEvents: enter-vr; resumeEvents: exit-vr"
      text="font: roboto; align: center; color: #fff; value: Enter VR"
      position="0 0.02 -0.2"
    )
