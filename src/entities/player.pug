- var eyePosition = "0 1.6 0"

a-entity#player(wasd-ext)
  a-entity(
    raycaster="far: 2; objects: [data-obstacle]"
    obstacle-stop)

  a-entity.camera(
    look-controls
    camera="far: 200"
    position=eyePosition
    animation="property: position; to: 0 9 9; startEvents: u; dur: 300"
    animation__p="property: position; to: 0 1.6 0; startEvents: d; dur: 300")

    a-entity.intro(
      position="0 0.01 -0.08"
      text__s="font: roboto; align: center; color: #000; letter-spacing: 0; width: 0.65; value: Enter VR"
      text="font: roboto; align: center; color: #B0B8B4; letter-spacing: -1; width: 0.66; value: Enter VR"
      animation="property: visible; from: true; to: false; startEvents: enter-vr; resumeEvents: exit-vr"
      animation__t="property: text.opacity; from: 0; to: 1; dur: 1200; dir: alternate; loop: true; easing: easeInOutBack"
      animation__s="property: text__s.opacity; from: 0; to: 1; dur: 1200; dir: alternate; loop: true; easing: easeInOutBack"
      )

    a-entity.msg(
      visible="false"
      text="font: roboto; color: #ff9933; align: center; value: Waiting for Controllers; align: center"
      scale="2 2 1"
      position="0 0.1 -1.3")


