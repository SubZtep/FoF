    //-   material="color: black; shader: flat")
    //-   //- raycaster="showLine: true; far: 100"
    //-   //- line="color: orange; lineWidth: 10"

  a-entity(
    raycaster="far: 0.1; direction: 1 0 0; objects: [data-handy]; showLine: true"
    hand-controls="hand: left; color: #0ffc93"
    hand-vr="hand: left"
    wasd-vr)
  a-entity(
    raycaster="far: 0.1; direction: -1 0 0; objects: [data-handy]; showLine: true"
    hand-controls="hand: right; color: #0ffc93"
    hand-vr="hand: right"
    rotate-vr)

  a-box#avatar(
    visible="false"
    color="lime"
    width="0.5"
    height="1.8"
    depth="0.3"
    position="0 0.9 0"
    shadow)

