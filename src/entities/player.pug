- var eyePosition = '0 1.6 0'

a-entity#player(wasd-ext)
  a-entity(raycaster="far: 2; objects: [data-obstacle]" obstacle-stop)

  a-entity.camera(
    look-controls
    camera="far: 200"
    position=eyePosition
    animation="property: position; to: 0 9 9; startEvents: u; dur: 300"
    animation__p="property: position; to: 0 1.6 0; startEvents: d; dur: 300")
    a-text.msg(
      {
      visible:
      false
      font:
      roboto
      color:
      #ff9933
      align:
      center;
      value:
      Waiting
      for
      Controllers;
      align:
      center
      scale:
      2
      2
      1
      position:
      0
      0.1
      -1.3
      })

  a-entity#l(
    hand-controls="hand: left; color: #0cca71"
    raycaster="far: 0.15; direction: 1 0 0; objects: [handy]; showLine: true"
    wasd-vr="hand: left; target: #player; action: move")

  a-entity#r(
    hand-controls="hand: right; color: #0cca71"
    raycaster="far: 0.15; direction: -1 0 0; objects: [handy]; showLine: true;"
    wasd-vr="hand: right; target: #player; action: turn")

  a-box#avatar(visible="false" color="lime" width="0.5" height="1.8" depth="0.3" position="0 0.9 0" shadow)
