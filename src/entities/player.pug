- var eyePosition = "0 1.6 0"

a-entity#player(
  wasd-controls="acceleration: 150"
  wasd-ext)
  a-entity.ray(
    raycaster="far: 2; objects: [data-obstacle]"
    obstacle-stop)

  a-entity.camera(
    look-controls
    camera="far: 200"
    position=eyePosition
    animation="property: position; to: 0 15 9; startEvents: u; dur: 300"
    animation__p="property: position; to: 0 1.6 0; startEvents: d; dur: 300")

    a-entity(
      cursor
      visible="true"
      raycaster="far: 2; objects: [data-obstacle]"
      position="0 0 -0.1"
      geometry="primitive: ring; radiusInner: 0.0045; radiusOuter: 0.0048"
      material="color: #885; shader: flat"
      animation="property: visible; to: false; startEvents: enter-vr")

  a-entity.left-hand(
    hand-controls="hand: left; color: #0ffc93"
    raycaster="far: 0.15; direction: 1 0 0; objects: [handy]; showLine: true; enabled: false"
    hand-vr
    wasd-vr="action: move")

  a-entity.right-hand(
    hand-controls="hand: right; color: #0ffc93"
    raycaster="far: 0.15; direction: -1 0 0; objects: [handy]; showLine: true; enabled: false"
    hand-vr
    wasd-vr="action: turn")

  a-box#avatar(
    visible="false"
    color="lime"
    width="0.5"
    height="1.8"
    depth="0.3"
    position="0 0.9 0"
    shadow)
