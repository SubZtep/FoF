    //-   material="color: #885; shader: flat"
    //-   animation="property: visible; to: false; startEvents: enter-vr"
    //-   )

  a-entity#l(
    hand-controls="hand: left; color: #0ffc93"
    raycaster="far: 0.15; direction: 1 0 0; objects: [handy]; showLine: true"
    wasd-vr="target: #player; action: move"
    )

  a-entity#r(
    hand-controls="hand: right; color: #0ffc93"
    raycaster="far: 0.15; direction: -1 0 0; objects: [handy]; showLine: true;"
    wasd-vr="target: #player; action: turn"
    )

  a-box#avatar(
    visible="false"
    color="lime"
    width="0.5"
    height="1.8"
    depth="0.3"
    position="0 0.9 0"
    shadow
    )
