{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["es2020", "dom"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    // "isolatedModules": true,
    "downlevelIteration": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    // "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
